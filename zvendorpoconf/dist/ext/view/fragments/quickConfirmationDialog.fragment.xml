   xmlns:core="sap.ui.core" >
   <Dialog
      id="idQuickConfirmationDialog"
      title="Quick Confirmation Dialog" contentHeight="1000px" contentWidth="1200px">
      <content>
            <table:Table id="idQuickConfirmationTable" selectionMode="MultiToggle"
				visibleRowCount="10" ariaLabelledBy="title" paste="onPaste" rows="{ path: '/quickVendorData'}">
				<table:extension>
					<OverflowToolbar id="otbSubheader" style="Clear">
						<Title text="PO Lines For Quick Confirmation" level="H2" />
						<ToolbarSpacer />
					</OverflowToolbar>
				</table:extension>
				<table:rowSettingsTemplate>
					<table:RowSettings highlight="{= ${MsgTyp} === 'E' ? 'Error' : null}" />
				</table:rowSettingsTemplate>
				<table:columns>
					<table:Column width="12rem">
						<Label text="Purchasing Document" />
						<table:template>
							<Text text="{PurchaseOrder}" wrapping="false" />
						</table:template>
					</table:Column>
					<table:Column width="12rem">
						<Label text="Purchasing Item" />
						<table:template>
							<Text text="{PurchaseOrderItem}" wrapping="false" />
						</table:template>
					</table:Column>
					<table:Column width="12rem">
						<Label text="Purchasing Group" />
						<table:template>
							<Text text="{PurchasingGroup}" wrapping="false" />
						</table:template>
					</table:Column>
					<table:Column width="12rem">
						<Label text="Purchasing Org" />
						<table:template>
							<Text text="{PurchasingOrganization}" wrapping="false" />
						</table:template>
					</table:Column>
					<table:Column width="8rem">
						<Label text="Supplier" />
						<table:template>
							<Text text="{Supplier}" wrapping="false" />
						</table:template>
					</table:Column>
					<table:Column width="14rem">
						<Label text="Order Quantity" />
						<table:template>
							<Text text="{OrderQuantity}" />
						</table:template>
					</table:Column>
					<table:Column width="8rem">
						<Label text="UOM" />
						<table:template>
							<Text text="{PurchaseOrderQuantityUnit}" />
						</table:template>
					</table:Column>
						<table:Column width="10rem">
						<Label text="Pickup Date " />
						<table:template>
							<DatePicker enabled="false"   value="{path: 'PickUpDate', type: 'sap.ui.model.type.Date', formatOptions: {UTC : true}}"/>
						</table:template>
					</table:Column>
									<table:Column width="10rem">
						<Label text="Supplier Confirmation Date 1" />
						<table:template>
							<DatePicker  enabled="false"  value="{path: 'SupplierCnfDate1', type: 'sap.ui.model.type.Date', formatOptions: {UTC : true}}"/>
